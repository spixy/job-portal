@model IEnumerable<BusinessLayer.DTOs.JobOfferDto>

@{
    ViewBag.Title = "View";
}

<h2>Jobs</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skills)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Office.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Office.Country)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skills)
        </td>
        <td>
            @Html.ActionLink(item.Employer.Name, "Details", "Employer", new { id = item.Employer.Id }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Office.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Office.Country)
        </td>
    </tr>
}

</table>
